{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 4,
    "minor": 0
  },

  "configurePresets": [
    {
      "name": "default-configure",
      "displayName": "CMake with vcpkg",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    },

    {
      "name": "default-macos",
      "inherits": "default-configure",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "arm64-osx"
      }
    },

    {
      "name": "default-windows",
      "inherits": "default-configure",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "default-build",
      "configurePreset": "default-configure"
    }
  ]
}
